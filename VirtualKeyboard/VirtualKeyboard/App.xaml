<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="VirtualKeyboard.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:VirtualKeyboard"
    xmlns:converter="clr-namespace:VirtualKeyboard.Converter">


    <Application.Resources>
        <x:Double x:Key="AlphaRatio">0.35</x:Double>
        <x:Double x:Key="NumericRatio">1.2</x:Double>

        <Style TargetType="ContentPage">
            <Setter Property="Padding" Value="0" />

        </Style>
        <ResourceDictionary>
            <converter:ValueScaler x:Key="ValueScaler" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
