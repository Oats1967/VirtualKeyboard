            Grid.Column="11"
            BackgroundColor="{StaticResource NormalKey}"
            Command="{Binding KeyPressedCommand}"
            CommandParameter="-"
            Text="-" />

        <!--  Row 4  -->
        <Image
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Aspect="Fill"
            Source="firmenlogo_grey.jpg" />
        <controls:Key
            Grid.Row="4"
            Grid.Column="4"
            Grid.ColumnSpan="6"
            BackgroundColor="{StaticResource NormalKey}"
            Command="{Binding KeyPressedCommand}"
            CommandParameter=" "
            Text=" " />
