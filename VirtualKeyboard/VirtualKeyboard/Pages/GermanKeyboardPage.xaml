            Grid.Row="4"
            Grid.Column="10"
            Grid.ColumnSpan="2"
            BackgroundColor="{StaticResource NormalKey}"
            Command="{Binding LeftPressedCommand}"
            Text="◀" />
        <controls:Key
            Grid.Row="4"
            Grid.Column="12"
            Grid.ColumnSpan="2"
            BackgroundColor="{StaticResource NormalKey}"
            Command="{Binding RightPressedCommand}"
            CommandParameter="."
