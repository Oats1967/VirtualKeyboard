            Grid.Column="8"
            BackgroundColor="{StaticResource NormalKey}"
            Command="{Binding KeyPressedCommand}"
            CommandParameter="9"
            Text="9" />
        <controls:Key
            Grid.Row="0"
            Grid.Column="9"
            BackgroundColor="{StaticResource NormalKey}"
            Command="{Binding KeyPressedCommand}"
            CommandParameter="0"
            Text="0" />
        <controls:Key
            Grid.Row="0"
            Grid.Column="10"
            BackgroundColor="{StaticResource NormalKey}"
            Command="{Binding KeyPressedCommand}"
            CommandParameter="ß"
            Text="ß" />
        <controls:Key
            Grid.Row="0"
            Grid.Column="11"
            Grid.ColumnSpan="3"
            BackgroundColor="{StaticResource SmaDoTecRed}"
            Command="{Binding BackspacePressedCommand}"
            Text="⌫" />

        <!--  Row 1  -->
